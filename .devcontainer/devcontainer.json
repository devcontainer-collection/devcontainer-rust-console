{
  "name": "devcontainer-rust-console",
  "dockerComposeFile": "docker-compose.yml",
  "service": "main",
  "workspaceFolder": "/workspace",
  // container startup script
  "postCreateCommand": "sh /workspace/.devcontainer/containers/main/startup.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "vadimcn.vscode-lldb",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "rust-lang.rustfmt"
        //last extension should not have a comma
      ],
      "settings": {
        "files.eol": "\n",
        "editor.tabSize": 4,
        "editor.renderWhitespace": "all",
        "editor.formatOnSave": true,
        "remote.localPortHost": "allInterfaces",
        "git.detectSubmodulesLimit": 70,
        "editor.tabCompletion": "on",
        "rust-analyzer.linkedProjects": [
          "app/src/Cargo.toml"
        ],
        //--------------------- launch in devcontainer ---------------------
        "launch": {
          "version": "0.2.0",
          "configurations": [
            {
              "type": "lldb",
              "request": "launch",
              "name": "Debug Rust Program",
              "cargo": {
                "args": [
                  "build"
                ],
                "cwd": "${workspaceFolder}/app/src"
              },
              "args": [],
              "program": "${workspaceFolder}/app/src/target/debug/main",
              // "cwd": "${workspaceFolder}/app/src",
              "sourceLanguages": [
                "rust"
              ],
              "preLaunchTask": "build for debugging"
            }
          ]
        },
        //===================== launch in devcontainer =====================
        //--------------------- tasks in devcontainer ---------------------
        "tasks": {
          "version": "2.0.0",
          "tasks": [
            {
              "label": "clean builds",
              "type": "shell",
              "command": "cargo",
              "args": [
                "clean"
              ],
              "options": {
                "cwd": "${workspaceFolder}/app/src",
                "env": {
                  "CARGO_TARGET_DIR": "${workspaceFolder}/app/src/target"
                }
              },
              "problemMatcher": []
            },
            {
              "label": "build for debugging",
              "type": "shell",
              "command": "cargo",
              "args": [
                "build"
              ],
              "options": {
                "cwd": "${workspaceFolder}/app/src"
                // "env": {
                // 	"CARGO_TARGET_DIR": "${workspaceFolder}/app/src/target"
                // }
              },
              "problemMatcher": [
                "$rustc"
              ],
              "group": "build"
            },
            {
              "label": "build for release",
              "type": "shell",
              "command": "sh",
              "args": [
                "-c",
                "RUSTFLAGS=\"-C strip=symbols\" cargo build --release" // strip all
                // "RUSTFLAGS=\"-C strip=debuginfo\" cargo build --release"// strip but keep function names
                // "RUSTFLAGS=\"-C strip=none\" cargo build --release" // no strip
              ],
              "options": {
                "cwd": "${workspaceFolder}/app/src"
                // "env": {
                // 	"CARGO_TARGET_DIR": "${workspaceFolder}/app/src/target"
                // }
              },
              "problemMatcher": [
                "$rustc"
              ],
              "group": "build"
            },
            {
              "label": "build all release targets",
              "type": "shell",
              "dependsOn": [
                "build cross(release): x86_64-unknown-linux-gnu",
                "build cross(release): aarch64-unknown-linux-gnu",
                "build cross(release): x86_64-apple-darwin",
                "build cross(release): aarch64-apple-darwin",
                "build cross(release): x86_64-pc-windows-gnullvm",
                "build cross(release): aarch64-pc-windows-gnullvm"
              ],
              "group": "build",
              "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
              }
            },
            {
              "label": "build cross(release): x86_64-unknown-linux-gnu",
              "type": "shell",
              "command": "sh",
              "args": [
                "build-scripts/build.sh",
                "--arch",
                "x86_64",
                "--os",
                "linux",
                "--abi",
                "gnu",
                "--build-type",
                "release"
              ],
              "options": {
                "cwd": "${workspaceFolder}/app"
              },
              "problemMatcher": [
                "$rustc"
              ]
            },
            {
              "label": "build cross(release): aarch64-unknown-linux-gnu",
              "type": "shell",
              "command": "sh",
              "args": [
                "build-scripts/build.sh",
                "--arch",
                "aarch64",
                "--os",
                "linux",
                "--abi",
                "gnu",
                "--build-type",
                "release"
              ],
              "options": {
                "cwd": "${workspaceFolder}/app"
              },
              "problemMatcher": [
                "$rustc"
              ]
            },
            {
              "label": "build cross(release): x86_64-apple-darwin",
              "type": "shell",
              "command": "sh",
              "args": [
                "build-scripts/build.sh",
                "--arch",
                "x86_64",
                "--vendor",
                "apple",
                "--os",
                "darwin",
                "--build-type",
                "release"
              ],
              "options": {
                "cwd": "${workspaceFolder}/app"
              },
              "problemMatcher": [
                "$rustc"
              ]
            },
            {
              "label": "build cross(release): aarch64-apple-darwin",
              "type": "shell",
              "command": "sh",
              "args": [
                "build-scripts/build.sh",
                "--arch",
                "aarch64",
                "--vendor",
                "apple",
                "--os",
                "darwin",
                "--build-type",
                "release"
              ],
              "options": {
                "cwd": "${workspaceFolder}/app"
              },
              "problemMatcher": [
                "$rustc"
              ]
            },
            {
              "label": "build cross(release): x86_64-pc-windows-gnullvm",
              "type": "shell",
              "command": "sh",
              "args": [
                "build-scripts/build.sh",
                "--arch",
                "x86_64",
                "--vendor",
                "pc",
                "--os",
                "windows",
                "--abi",
                "gnullvm",
                "--build-type",
                "release"
              ],
              "options": {
                "cwd": "${workspaceFolder}/app"
              },
              "problemMatcher": [
                "$rustc"
              ]
            },
            {
              "label": "build cross(release): aarch64-pc-windows-gnullvm",
              "type": "shell",
              "command": "sh",
              "args": [
                "build-scripts/build.sh",
                "--arch",
                "aarch64",
                "--vendor",
                "pc",
                "--os",
                "windows",
                "--abi",
                "gnullvm",
                "--build-type",
                "release"
              ],
              "options": {
                "cwd": "${workspaceFolder}/app"
              },
              "problemMatcher": [
                "$rustc"
              ]
            }
          ]
        }
        //===================== tasks in devcontainer =====================
      }
    }
  }
}